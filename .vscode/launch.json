    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/cli/GenericCli/bin/Debug/net6.0/GenericCli.dll",
            "args": [ "weather", "-n", "Porto" ],
            "cwd": "${workspaceFolder}/src/cli/GenericCli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}